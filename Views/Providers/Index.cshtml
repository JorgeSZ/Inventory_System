@model IEnumerable<InventorySystem.Models.Provider>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProviderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProviderContactEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProviderContactPhone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProviderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProviderContactEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProviderContactPhone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProvider">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdProvider">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProvider">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
